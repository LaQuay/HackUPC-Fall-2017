<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rdgGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <dev.blind.hackupc.a2017.blindhelper.components.SpeechRadioButton
                    android:id="@+id/checkbox_restaurants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/checkbox_restaurants_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurants" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <dev.blind.hackupc.a2017.blindhelper.components.SpeechRadioButton
                    android:id="@+id/checkbox_monuments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/checkbox_monuments_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monument" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <dev.blind.hackupc.a2017.blindhelper.components.SpeechRadioButton
                    android:id="@+id/checkbox_pharmacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/checkbox_pharmacy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pharmacy" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <dev.blind.hackupc.a2017.blindhelper.components.SpeechRadioButton
                    android:id="@+id/checkbox_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/checkbox_market_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <dev.blind.hackupc.a2017.blindhelper.components.SpeechRadioButton
                    android:id="@+id/checkbox_banks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/checkbox_banks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banks" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <dev.blind.hackupc.a2017.blindhelper.components.SpeechRadioButton
                    android:id="@+id/checkbox_post_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/checkbox_post_office_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post Office" />
            </LinearLayout>
        </LinearLayout>
    </RadioGroup>

    <com.google.android.gms.maps.MapView
        android:id="@+id/around_me_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>