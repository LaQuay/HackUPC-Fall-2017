<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/preview_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechTextView
            android:id="@+id/detected_objects_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..." />

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechTextView
            android:id="@+id/detected_objects_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechTextView
            android:id="@+id/detected_objects_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechTextView
            android:id="@+id/detected_objects_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechTextView
            android:id="@+id/detected_objects_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>