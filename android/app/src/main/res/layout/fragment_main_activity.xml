<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"/>

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechButton
            android:id="@+id/main_fragment_where_i_am_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawable"
            android:drawableLeft="@drawable/common_full_open_on_phone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Where am I?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"/>

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechButton
            android:id="@+id/main_fragment_around_me_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawable"
            android:drawableLeft="@drawable/common_full_open_on_phone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Around me"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"/>

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechButton
            android:id="@+id/main_fragment_be_my_eyes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawable"
            android:drawableLeft="@drawable/common_full_open_on_phone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Be my eyes"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"/>

        <dev.blind.hackupc.a2017.blindhelper.components.SpeechButton
            android:id="@+id/main_fragment_read_for_me_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_drawable"
            android:drawableLeft="@drawable/common_full_open_on_phone"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Read for me"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>